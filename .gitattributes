# Normalizar texto a LF (profesional, multiplataforma)
*.cs        text eol=lf
*.shader    text eol=lf
*.cginc     text eol=lf
*.hlsl      text eol=lf
*.glsl      text eol=lf
*.json      text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf

# Unity assets (YAML-based) → siempre LF
*.meta      text eol=lf
*.unity     text eol=lf
*.prefab    text eol=lf
*.anim      text eol=lf
*.controller text eol=lf
*.asset     text eol=lf
*.asmdef    text eol=lf

# Scripts especiales
*.sh        text eol=lf
*.ps1       text eol=crlf
*.bat       text eol=crlf

# Imágenes, modelos, binarios con LFS
*.psd filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.fbx filter=lfs diff=lfs merge=lfs -text
